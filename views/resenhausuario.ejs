<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="index.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/publicacaousuario.css">
    <title>LivroLivre</title>

</head>

<body>
<header class="cabecalho">
    <nav>
        <div class="logo">LivroLivre</div>
        <a href="/perfil">Perfil</a>
        <a href="/resenha">Resenhas</a>
        <a href="/principal">Inicio</a>
    </nav>
</header>


    <main class="main">
        <!-- Formulario de postagem (postar livro)-->
        <div class="newPost">
            <div class="infoUser">
                <div class="imgUser">

            <form class="formPost" id="formpost" method="post">
                

                <div class="iconsAndButtons">

                </div> 
            </form>
        </div>
        <!-- Posts enviados-->
        <ul class="posts" id="posts">
            <%Resenhas.forEach(function(post){%>
            <li class="post">
                <div class="infoUserPost">
                    <div class="imgUserPost"></div>
                    <div class="nameAndHour">
                        <strong><%=post.usuario.nome%> <%=post.usuario.sobrenome%></strong>
                    </div>
                </div>

                <p>
                    <%=post.textoresenha%>
                </p>
                <div class="actionBtnPost">
                    <button type="button" class="filesPost chamarchat">Excluir Publicação</button>
                </div>

            </li>
            <%})%>
        </ul>
    </main>

</body>

</html>