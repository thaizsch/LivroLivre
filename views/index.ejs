<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="index.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <title>LivroLivre</title>

</head>

<body>
    <div id="title">
        <h1>LivroLivre</h1>
    </div>

    <ul>
        <a href="" id="link"><li>Resenhas</li></a>
        <a href="" id="link"><li>Perfil</li></a>
    </ul>
</header>


    <main class="main">
        <!-- Formulario de postagem (postar livro)-->
        <div class="newPost">
            <div class="infoUser">
                <div class="imgUser">

                </div>
                <strong><%=Usuario.nome%> <%=Usuario.sobrenome%></strong>
            </div>
            <form class="formPost" id="formpost" method="post" enctype="multipart/form-data">
                <textarea name="texto" placeholder="Publicar um livro" id="textarea"></textarea>

                <div class="iconsAndButtons">
                    <input type="file" required name="imglivro">
                    <!--<div class="icons">
                            <button class="btnFileForm">Foto</button>
                        </div>-->
                    <button type="submit" id="botao" class="btnSubmitForm">Publicar</button>
                </div>
            </form>
        </div>
        <!-- Posts enviados-->
        <ul class="posts" id="posts">
            <%Postagens.forEach(function(post){%>
            <li class="post">
                <div class="infoUserPost">
                    <div class="imgUserPost"></div>
                    <div class="nameAndHour">
                        <strong><%=post.usuario.nome%></strong>
                        <p>  </p>
                    </div>
                </div>

                <p>
                   <%=post.usuario.nome%>
                </p>
                <img src="/fotos/<%=post.imglivro%>" style="max-width:70%; max-height:70%;" >

                <div class="actionBtnPost">
                    <button type="button" class="filesPost like">Favoritar</button>
                    <button type="button" class="filesPost chamarchat">Chat</button>
                </div>
            </li>
            <%})%>
        </ul>
    </main>

</body>

</html>